<% provide(:title, "My Classes") %>
<div class="course-btns">
	<div class="user-btn profile-btn">
		<%= link_to "Create Class", newcourse_path %>
	</div>
	<div class="prog-btn profile-btn">
		<%= link_to "Create Program", newprogram_path %>
	</div>
</div>
<div class="creation-info">
	<div class="creation-course colu">
		<h1>My Created Courses</h1>
		<ul>
			<% @courses.each do |course| %>
			<li class="course-list">
				<div class="crea-course">
					<span class="course-titl"><%= link_to course.title, course_path(course) %></span>
					<span class="smaller editedit"><%= link_to "Edit", edit_course_path(course) %></span>
					<span class="smaller delete-btn"><%= link_to "Delete", course, method: :delete, 
												data: { confirm: "You sure?" },
												title: course.title %></span>
					<div>Number of registered students: <%= course.numstudents %></div>
					<div>Number of students who passed the course: <%= course.numstudentspass %></div>
					<div>Number of registered programs: <%= course.programs.count %></div>
				</div>
			</li>
			<% end %>
		</ul>
	</div>
	<div class="creation-program colu">
		<h1>My Created Programs</h1>
		<ul>
			<% @programs.each do |program| %>
			<li class="course-list">
				<div class="crea-course">
				<span class="course-titl"><%= link_to program.title, program_path(program) %></span>
				<span class="smaller editedit"><%= link_to "Edit", edit_program_path(program) %></span>
				<span class="smaller delete-btn"><%= link_to "Delete", program, method: :delete, 
											data: { confirm: "You sure?" },
											title: program.title %></span>
					<div>Number of registered students: <%= program.numstudents %></div>
					<div>Number of students who completed the program: <%= program.numstudentspass %></div>
				</div>
			</li>
			<% end %>
		</ul>
	</div>
</div>