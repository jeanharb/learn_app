<% provide(:title, @user.name) %>
<div class="course-info">
	<h1>
		<%= @user.name %>
	</h1>
	<h2>Programs</h2>
	<h4>
		<div id="prog-list">
			<% @programs.each do |program| %>
				<div class="courstitle"><%= link_to "#{program.title}", program_path(program) %></div>
			<% end %>
		</div>
	</h4>
	<h2>Courses</h2>
	<h4>
		<div id="cour-list">
			<% @courses.each do |course| %>
				<div class="courstitle"><%= link_to "#{course.title}", course_path(course) %></div>
			<% end %>
		</div>
	</h4>
</div>
<div class="course-btns">
	<% if current_user?(@user) %>
		<% if current_user.creator %>
			<div class="user-btn profile-btn">
				<%= link_to "Create Class", newcourse_path %>
			</div>
			<div class="myclasses profile-btn">
				<%= link_to "My Creations", creations_path %>
			</div>
		<% end %>
	<% end %>
</div>