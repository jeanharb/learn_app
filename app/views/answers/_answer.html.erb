<%= fields_for "question[answers_attributes][]", @answer do |j| %>
  <li class="question-answer-li">
	<div class="question-answer exam-fields">
		<%= j.label "Answer :" %>
		<% if params.has_key?(:question_name) %>
			<%= j.text_field :name, :value => "#{params[:answer1]}" %>
		<% else %>
			<%= j.text_field :name %>
		<% end %>
		<%= j.radio_button("goodanswer", "true") %>
	</div>
  </li>
  <li class="question-answer-li">
	<div class="question-answer exam-fields">
		<%= j.label "Answer :" %>
		<% if params.has_key?(:question_name) %>
			<%= j.text_field :name, :value => "#{params[:answer2]}" %>
		<% else %>
			<%= j.text_field :name %>
		<% end %>
		<%= j.radio_button("goodanswer", "true", :checked => true) %>
	</div>
  </li>
<% end %>