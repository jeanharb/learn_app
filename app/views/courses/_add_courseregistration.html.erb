<% if !current_user.courseregistered?(@course) %>
	<%= form_for(current_user.courseregistrations.build(takencourse_id: @course.id), :remote => true) do |f| %>
  		<%= f.hidden_field :takencourse_id %>
  		<%= f.submit "Register", :class => "reg-btn reg-btn-add" %>
	<% end %>
<% else %>
	<%= form_for(current_user.courseregistrations.find_by_takencourse_id(@course.id), 
			 html: { method: :delete }, :remote => true) do |f| %>
	  <%= f.hidden_field :takencourse_id %>
	  <%= f.submit "Unregister", :class => "reg-btn reg-btn-rem" %>
	<% end %>
<% end %>