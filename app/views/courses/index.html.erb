<% provide(:title, "All Courses") %>
<div class="courses">
<h1>Here's a list of all courses!</h1>
<% @courses.each do |course| %>
	<div class="course-list">
		<span class="list-star">
			<% if course.average_rating == 0 %>
				Not rated
			<% else %>
				<%= course.average_rating %> stars (<%= course.num_rating%>)
			<% end %>
		</span>
		<span class="courstitle">
		<%= link_to course.title, course_path(course) %>
		</span>
		<span class="smaller">
			Created by <%= User.find_by_id(course.user_id).name %>
		</span>
		<% if !courcreator?(course) %>
		<% if is_admin? %>
		<span class="delete-btn smaller">
		<%= link_to "delete", course, method: :delete, 
									  data: { confirm: "You sure?" },
									  title: course.title,
									  :admin => "yes" %>
		</span>
		<% end %>
		<% end %>
	</div>
<% end %>
</div>