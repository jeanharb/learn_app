<% if !note.filename.nil? %>
<li>
	<span class="content">
		<%= link_to note.filename, download_note_path(note) %>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(note.created_at) %> ago.
	</span>
	<span>
	<% if creator? %>
		<%= link_to "delete", note, method: :delete, 
									data: { confirm: "You sure?" },
									title: note.filename %>
	<% end %>
	</span>
</li>
<% end %>